{
    "name": "kwaadpepper/exception-handler",
    "description": "Send emails when exceptions occurs",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy Munsch",
            "email": "github@jeremydev.ovh",
            "homepage": "https://jeremydev.ovh"
        }
    ],
    "homepage": "https://github.com/kwaadpepper/exception-handler",
    "keywords": [
        "Laravel",
        "Exception",
        "Email",
        "Policies"
    ],
    "require": {
        "illuminate/support": "~10",
        "laravel/framework": "~10"
    },
    "require-dev": {
        "slevomat/coding-standard": "^8.10"
    },
    "autoload": {
        "psr-4": {
            "Kwaadpepper\\ExceptionHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kwaadpepper\\ExceptionHandler\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kwaadpepper\\ExceptionHandler\\ExceptionHandlerServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
